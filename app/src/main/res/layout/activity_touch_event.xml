<?xml version="1.0" encoding="utf-8"?>
<com.nstv.myframework.test.event.TouchEventFather
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6600ff"
    android:orientation="vertical"
    tools:context="com.nstv.myframework.test.event.TouchEventActivity">

    <com.nstv.myframework.test.event.TouchEventChild
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="#00ffff"
        android:orientation="vertical">

        <com.nstv.myframework.test.event.TouchEventView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="60dp"
            android:background="#cccccc"
            android:text="click"/>

    </com.nstv.myframework.test.event.TouchEventChild>

</com.nstv.myframework.test.event.TouchEventFather>
